<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="All Test Suite">
    <groups>
        <run>
            <include name="Purchaser"/>
        </run>
    </groups>
    <test verbose="5" name="Submit Order Tests">
        <classes>
            <class name="SeleniumFramework.TestCases.PurchaseOrders"/>
        </classes>
    </test>
    <test verbose="5" name="Error Validation Tests">
        <classes>
            <class name="SeleniumFramework.TestCases.ErrorValidations"/>
        </classes>
    </test>
</suite>
